{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "itmar/design-title",
	"version": "0.1.0",
	"title": "Design Title",
	"category": "design",
	"icon": "tag",
	"description": "見出しタグに様々なスタイルを適用したブロックです",
	"supports": {
		"html": false
	},
	"styles": [
		{
			"name": "nomal",
			"label": "デザインなし",
			"isDefault": true
		},
		{
			"name": "virtical_line",
			"label": "ライン入り"
		},
		{
			"name": "sub_copy",
			"label": "サブコピー付き"
		}
	],
	"example": {},
	"attributes": {
		"headingContent": {
			"type": "string"
		},
		"headingType": {
			"type": "string",
			"default": "H2"
		},
		"font_style_heading": {
			"type": "object",
			"default": {
				"fontSize": "16px",
				"fontFamily": "Noto Sans JP, sans-serif",
				"fontWeight": "500",
				"isItalic": false
			}
		},
		"padding_heading": {
			"type": "object",
			"default": {
				"top": "10px",
				"left": "10px",
				"bottom": "10px",
				"right": "10px"
			}
		},
		"align": {
			"type": "string",
			"default": "none"
		},
		"backgroundColor": {
			"type": "string"
		},
		"backgroundGradient": {
			"type": "string"
		},
		"textColor": {
			"type": "string"
		},
		"colorVal_border": {
			"type": "string"
		},
		"gradientVal_border": {
			"type": "string"
		},
		"barWidth": {
			"type": "string",
			"default": "5px"
		},
		"barSpace": {
			"type": "string",
			"default": "10px"
		},
		"color_text_copy": {
			"type": "string"
		},
		"color_background_copy": {
			"type": "string",
			"default": "#d1cece"
		},
		"gradient_background_copy": {
			"type": "string"
		},
		"copy_content": {
			"type": "string",
			"default": "SAMPLE COPY"
		},
		"font_style_copy": {
			"type": "object",
			"default": {
				"fontSize": "16px",
				"fontFamily": "Arial, sans-serif",
				"fontWeight": "500",
				"isItalic": false
			}
		},
		"radius_copy": {
			"type": "object",
			"default": {
				"topLeft": "10px",
				"topRight": "10px",
				"bottomRight": "0px",
				"bottomLeft": "0px",
				"value": "0px"
			}
		},
		"padding_copy": {
			"type": "object",
			"default": {
				"top": "10px",
				"left": "10px",
				"bottom": "10px",
				"right": "10px"
			}
		},
		"isIcon": {
			"type": "boolean",
			"default": false
		},
		"icon_style": {
			"type": "object",
			"default": {
				"icon_name": "f030",
				"icon_pos": "left",
				"icon_size": "24px",
				"icon_color": "#000",
				"icon_space": "5px"
			}
		}
	},
	"textdomain": "design-title",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}