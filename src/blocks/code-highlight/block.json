{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "itmar/code-highlight",
	"version": "0.1.0",
	"title": "Code HighLight",
	"category": "widgets",
	"icon": "embed-generic",
	"description": "コードをハイライト表示するブロックです",
	"supports": {
		"html": false
	},
	"attributes": {
		"codeArea": {
			"type": "string",
			"default": ""
		},
		"linenums" : {
			"type" : "boolean", 
			"default" : true 
		},
		"linenumsStart" : {
			"type" : "number", 
			"default" : 1 
		},
		"lang" : {
			"type" : "string", 
			"default" : "" 
		},
		"align" : {
			"type" : "string", 
			"default" : "" 
		},
		"maxWidthEnable" : {
			"type" : "boolean", 
			"default" : false 
		},
		"maxWidth" : {
			"type" : "number", 
			"default" : 0 
		},
		"skin" : {
			"type" : "string", 
			"default" : "desert" 
		},
		"fileName": {
			"type" : "string", 
			"default" : ""
		},
		"isEditMode": {
			"type" : "boolean", 
			"default" : true 
		}
	},
	"textdomain": "block-location",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}