{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "itmar/pickup-posts",
	"version": "0.1.0",
	"title": "Pickup Posts",
	"category": "widgets",
	"icon": "flag",
	"description": "任意の投稿や固定ページを選択して表示するブロックです。",
	"attributes": {
		"numberOfItems": {
			"type": "number",
			"default": 3
		},
		"displayDate": {
			"type": "boolean",
			"default": true
		},
		"displayThumbnail": {
			"type": "boolean",
			"default": true
		}
	},
	"supports": {
		"html": false
	},
	"textdomain": "block-location",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
	