{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "itmar/design-title",
  "version": "0.1.0",
  "title": "Design Title",
  "category": "design",
  "icon": "tag",
  "description": "見出しタグに様々なスタイルを適用したブロックです",
  "supports": {
    "html": false
  },
  "styles": [
    {
      "name": "nomal",
      "label": "デザインなし",
      "isDefault": true
    },
    {
      "name": "virtical_line",
      "label": "ライン入り"
    },
    {
      "name": "sub_copy",
      "label": "サブコピー付き"
    }
  ],
  "example": {},
  "attributes": {
    "headingContent": {
      "type": "string"
    },
    "headingType": {
      "type": "string",
      "default": "H2"
    },
    "headingID": {
      "type": "string"
    },
    "font_style_heading": {
      "type": "object",
      "default": {
        "fontSize": "16px",
        "fontFamily": "Noto Sans JP, sans-serif",
        "fontWeight": "500",
        "isItalic": false
      }
    },
    "margin_heading": {
      "type": "object",
      "default": {
        "top": "10px",
        "left": "10px",
        "bottom": "10px",
        "right": "10px"
      }
    },
    "padding_heading": {
      "type": "object",
      "default": {
        "top": "10px",
        "left": "10px",
        "bottom": "10px",
        "right": "10px"
      }
    },
    "align": {
      "type": "string",
      "default": "none"
    },
    "backgroundColor": {
      "type": "string"
    },
    "backgroundGradient": {
      "type": "string"
    },
    "textColor": {
      "type": "string"
    },
    "radius_heading": {
      "type": "object",
      "default": {
        "topLeft": "0px",
        "topRight": "0px",
        "bottomRight": "0px",
        "bottomLeft": "0px",
        "value": "0px"
      }
    },
    "border_heading": {
      "type": "object"
    },
    "optionStyle": {
      "type": "object"
    }
  },
  "textdomain": "design-title",
  "editorScript": "itmar-handle-design-title",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}