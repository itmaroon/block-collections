{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "itmar/design-text-ctrl",
  "version": "0.1.0",
  "title": "Design Text Control",
  "category": "design",
  "description": "スタイリングしたテキストコントロールです",
  "styles": [
    {
      "name": "nomal",
      "label": "デフォルト",
      "isDefault": true
    },
    {
      "name": "line",
      "label": "ラインのみ"
    }
  ],
  "supports": {
    "html": false
  },
  "attributes": {
    "inputName": {
      "type": "string",
      "default": "name"
    },
    "inputValue": {
      "type": "string",
      "default": ""
    },
    "placeFolder": {
      "type": "string",
      "default": ""
    },
    "inputType": {
      "type": "string",
      "default": "text"
    },
    "rowNum": {
      "type": "number",
      "default": 3
    },
    "required": {
      "type": "object",
      "default": {
        "flg": false,
        "display": "*"
      }
    },
    "font_style_input": {
      "type": "object",
      "default": {
        "fontSize": "16px",
        "fontFamily": "Noto Sans JP, sans-serif",
        "fontWeight": "500",
        "isItalic": false
      }
    },
    "bgColor_input": {
      "type": "string"
    },
    "bgGradient_input": {
      "type": "string"
    },
    "textColor_input": {
      "type": "string",
      "default": "#000"
    },
    "radius_input": {
      "type": "object",
      "default": {
        "topLeft": "0px",
        "topRight": "0px",
        "bottomRight": "0px",
        "bottomLeft": "0px",
        "value": "0px"
      }
    },
    "border_input": {
      "type": "object"
    },
    "margin_input": {
      "type": "object",
      "default": {
        "top": "1em",
        "left": "2em",
        "bottom": "1em",
        "right": "2em"
      }
    },
    "padding_input": {
      "type": "object",
      "default": {
        "top": "0",
        "left": "0",
        "bottom": "0",
        "right": "0"
      }
    },
    "labelContent": {
      "type": "string",
      "default": "Label Name"
    },
    "labelWidth": {
      "type": "string",
      "default": "auto"
    },
    "font_style_label": {
      "type": "object",
      "default": {
        "fontSize": "16px",
        "fontFamily": "Noto Sans JP, sans-serif",
        "fontWeight": "500",
        "isItalic": false
      }
    },
    "bgColor_label": {
      "type": "string"
    },
    "bgGradient_label": {
      "type": "string"
    },
    "textColor_label": {
      "type": "string",
      "default": "#000"
    },
    "radius_label": {
      "type": "object",
      "default": {
        "topLeft": "0px",
        "topRight": "0px",
        "bottomRight": "0px",
        "bottomLeft": "0px",
        "value": "0px"
      }
    },
    "border_label": {
      "type": "object"
    },
    "padding_label": {
      "type": "object",
      "default": {
        "top": "2px",
        "left": "5px",
        "bottom": "2px",
        "right": "5px"
      }
    },
    "labelSpace": {
      "type": "string",
      "default": "10px"
    }
  },
  "usesContext": [
    "itmar/label_width"
  ],
  "textdomain": "design-text-ctrl",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}